<div id="<%= dom_id course %>" class="course-card">
  <div class="course-image">
    <img src="https://isdmgroup.in/wp-content/uploads/2021/08/couress-1024x640.png" alt="<%= course.name %>" />
  </div>
  <div class="course-content">
    <h3><%= course.name %></h3>
    
    <div class="course-info">
      <p><strong>Start date:</strong> <%= course.start_date.strftime("%B %d, %Y") %></p>
      <p><strong>Duration:</strong> <%= course.duration %></p>
      <p><strong>Price:</strong> $<%= course.price %></p>
    </div>
    
    <div class="course-footer">
      <div class="course-instructor">
        <img class="instructor-avatar" src="data:image/jpeg;base64," />
        <span>Instructor</span>
      </div>
      
      <% if action_name != "show" %>
        <div class="course-actions">
          <%= link_to "Show", course, class: "btn btn-primary btn-sm" %>
          <%= link_to "Edit", edit_course_path(course), class: "btn btn-secondary btn-sm" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

<style>
  .course-info {
    margin: 15px 0;
    font-size: 0.9rem;
    color: #555;
  }
  
  .course-info p {
    margin-bottom: 5px;
  }
  
  .course-actions {
    display: flex;
    gap: 10px;
  }
  
  .btn-sm {
    padding: 5px 10px;
    font-size: 0.85rem;
  }
</style>
