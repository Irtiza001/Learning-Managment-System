<div class="w-full">
  <% if notice.present? %>
    <div class="alert alert-success">
      <i class="fas fa-check-circle"></i>
      <span><%= notice %></span>
    </div>
  <% end %>

  <div class="section-header">
    <div>
      <h1>Courses</h1>
      <p>Browse all available courses</p>
    </div>
    <%= link_to new_course_path, class: "btn btn-primary" do %>
      <i class="fas fa-plus-circle mr-2"></i>New Course
    <% end %>
  </div>

  <div class="course-grid">
    <% @courses.each do |course| %>
      <div class="course-card">
        <div class="course-image">
          <img src="https://isdmgroup.in/wp-content/uploads/2021/08/couress-1024x640.png" alt="<%= course.name %>" />
        </div>
        <div class="course-content">
          <h3 class="course-title"><%= course.name %></h3>
          
          <div class="course-info">
            <div class="info-item">
              <i class="fas fa-calendar-alt"></i>
              <span>Start date: <%= course.start_date.strftime("%B %d, %Y") %></span>
            </div>
            <div class="info-item">
              <i class="fas fa-clock"></i>
              <span>Duration: <%= course.duration %></span>
            </div>
            <div class="info-item">
              <i class="fas fa-tag"></i>
              <span>Price: $<%= course.price %></span>
            </div>
          </div>
          
          <div class="course-actions">
            <%= link_to course, class: "btn btn-primary btn-sm" do %>
              <i class="fas fa-eye mr-1"></i>View
            <% end %>
            <%= link_to edit_course_path(course), class: "btn btn-secondary btn-sm" do %>
              <i class="fas fa-edit mr-1"></i>Edit
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
