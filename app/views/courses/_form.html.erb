<div class="form-container">
  <%= simple_form_for(course) do |form| %>

    <%= render "shared/error_messages", object: course %>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :instructor_name %>
      <%= form.text_field :instructor_name, class: "form-control", placeholder: "Enter instructor name" %>
    </div>

    <div class="form-group">
      <%= form.label :start_date %>
      <%= form.date_field :start_date, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :duration %>
      <%= form.number_field :duration, class: "form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :price %>
      <%= form.text_field :price, class: "form-control" %>
    </div>

    <div class="form-actions">
      <%= form.submit class: "btn btn-primary" %>
      <%= link_to "Cancel", courses_path, class: "btn btn-light ml-2" %>
    </div>
  <% end %>
</div>
