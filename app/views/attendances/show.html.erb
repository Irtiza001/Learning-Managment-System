<div class="attendance-container">
  <div class="card">
    <h2 class="card-title">Attendance Details</h2>
    
    <div class="attendance-details">
      <div class="detail-item">
        <div class="detail-label">Date:</div>
        <div class="detail-value"><%= @attendance.date.strftime("%B %d, %Y") %></div>
      </div>

      <div class="detail-item">
        <div class="detail-label">Course:</div>
        <div class="detail-value"><%= @attendance.course&.name || "Not specified" %></div>
      </div>
      
      <div class="detail-item">
        <div class="detail-label">Status:</div>
        <div class="detail-value">
          <% if @attendance.status == "present" %>
            <span class="text-green-500">Present</span>
          <% else %>
            <span class="text-red-500">Absent</span>
          <% end %>
        </div>
      </div>

      <div class="detail-item">
        <div class="detail-label">Instructor:</div>
        <div class="detail-value"><%= @attendance.course&.instructor_name || "Not specified" %></div>
      </div>
    </div>
    
    <div class="action-buttons">
      <%= link_to attendances_path, class: "btn btn-light" do %>
        <i class="fas fa-arrow-left mr-2"></i>Back to Attendances
      <% end %>
      
      <%= link_to edit_attendance_path(@attendance), class: "btn btn-info" do %>
        <i class="fas fa-edit mr-2"></i>Edit
      <% end %>
      
      <%= button_to attendance_path(@attendance), method: :delete, class: "btn btn-danger", form: { data: { turbo_confirm: "Are you sure you want to delete this attendance?" } } do %>
        <i class="fas fa-trash-alt mr-2"></i>Delete
      <% end %>
    </div>
  </div>
</div>
