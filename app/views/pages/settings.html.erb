<div class="detail-container">
  <div class="detail-header">
    <h1>Settings</h1>
  </div>

  <div class="form-container">
    <div class="form-group" data-controller="settings">
      <label for="theme" class="form-label">Theme</label>
      <select name="theme" class="form-control" data-settings-target="input" data-action="change->settings#changeTheme">
        <option value="system">System Default</option>
        <option value="light">Light Mode</option>
        <option value="dark">Dark Mode</option>
      </select>
      <small class="text-muted">Choose how ThinkHub Academic Portal appears to you. Select system default to automatically match your device settings.</small>
    </div>

    <div class="form-group">
      <label class="form-label">Notifications</label>
      <div class="form-check">
        <input type="checkbox" id="email_notifications" class="form-check-input">
        <label for="email_notifications" class="form-check-label">Email Notifications</label>
      </div>
      <div class="form-check">
        <input type="checkbox" id="browser_notifications" class="form-check-input">
        <label for="browser_notifications" class="form-check-label">Browser Notifications</label>
      </div>
      <small class="text-muted">Control how you receive notifications about new content, grades, and announcements.</small>
    </div>

    <div class="form-actions">
      <button class="btn btn-primary">Save Settings</button>
      <button class="btn btn-light">Reset to Default</button>
    </div>
  </div>
</div>

<style>
  .text-muted {
    color: #6c757d;
    font-size: 0.875rem;
    margin-top: 5px;
    display: block;
  }
  
  .form-check {
    margin-bottom: 10px;
  }
  
  .form-check-input {
    margin-right: 10px;
  }
</style>
